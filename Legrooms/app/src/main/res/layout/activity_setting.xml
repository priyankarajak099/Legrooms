<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/back_arrow" />

        <com.legrooms.Views.TextViewPlus
            android:id="@+id/tv_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Setting"
            android:singleLine="true"
            android:textColor="@android:color/white"
            app:customFont="@string/poppin_semibold_fonts"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <com.legrooms.Views.TextViewPlus
        android:id="@+id/tv_account_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/txt_fld"
        android:drawableLeft="@mipmap/acc_detail"
        android:drawableRight="@mipmap/right_arrow"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:hint="Account Details"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:customFont="@string/poppin_regular_fonts" />

    <com.legrooms.Views.TextViewPlus
        android:id="@+id/tv_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/txt_fld"
        android:drawableLeft="@mipmap/invite_frnd"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/right_arrow"
        android:gravity="left|center_vertical"
        android:hint="Invite Friends"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:customFont="@string/poppin_regular_fonts" />

    <com.legrooms.Views.TextViewPlus
        android:id="@+id/tv_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/txt_fld"
        android:drawableLeft="@mipmap/help"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/right_arrow"
        android:gravity="left|center_vertical"
        android:hint="Help"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:customFont="@string/poppin_regular_fonts" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    <com.legrooms.Views.Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="20dp"
        android:background="@drawable/booking_selector"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:customFont="@string/poppin_regular_fonts"
        />
    </LinearLayout>
</LinearLayout>