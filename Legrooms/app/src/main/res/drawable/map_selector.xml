<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="0dp" android:shape="rectangle" >

            <solid android:color="@color/darkBlue" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="20dp" android:topLeftRadius="0dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:padding="0dp" android:shape="rectangle" >

            <solid android:color="@color/darkBlue" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="20dp" android:topLeftRadius="0dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:padding="0dp" android:shape="rectangle">
            <solid android:color="@color/darkBlue" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="20dp" android:topLeftRadius="0dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item>
        <shape android:padding="0dp" android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="2dp" android:color="@color/darkBlue"></stroke>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="20dp" android:topLeftRadius="0dp" android:topRightRadius="20dp" />
        </shape>
    </item>


</selector>
