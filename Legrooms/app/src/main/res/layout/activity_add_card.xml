<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/cancel_btn" />

        <com.legrooms.Views.TextViewPlus
            android:id="@+id/tv_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Add New Card"
            android:singleLine="true"
            android:textColor="@android:color/white"
            app:customFont="@string/poppin_semibold_fonts"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <com.legrooms.Views.EditText
        android:id="@+id/et_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/txt_fld"
        android:drawableLeft="@mipmap/card_icon"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:hint="Enter Card Number"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:inputType="number"
        android:textColor="#787878"
        android:textSize="12sp"
        app:customFont="@string/poppin_regular_fonts" />

    <com.legrooms.Views.EditText
        android:id="@+id/et_card_holder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/txt_fld"
        android:gravity="left|center_vertical"
        android:hint="Cardholder's Name"
        android:inputType="text"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="#787878"
        android:textSize="12sp"
        app:customFont="@string/poppin_regular_fonts" />

    <com.legrooms.Views.EditText
        android:id="@+id/et_postal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/txt_fld"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:hint="Billing Zip / Postal Code"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="#787878"
        android:textSize="12sp"
        app:customFont="@string/poppin_regular_fonts" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <com.legrooms.Views.Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="20dp"
            android:background="@mipmap/submit_card"
            android:gravity="center"
            android:textSize="13sp"
            app:customFont="@string/poppin_regular_fonts"
            />
    </LinearLayout>
</LinearLayout>