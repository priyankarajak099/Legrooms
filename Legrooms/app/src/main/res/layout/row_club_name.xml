<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEF4F4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_center_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.legrooms.Views.TextViewPlus
                    android:id="@+id/tv_maps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/filter_icon"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Map"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:customFont="@string/poppin_regular_fonts" />

                <com.legrooms.Views.TextViewPlus
                    android:id="@+id/tv_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/filter_icon"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Filters"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:customFont="@string/poppin_regular_fonts" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.legrooms.Views.TextViewPlus
                    android:id="@+id/tv_row_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:capitalize="words"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:customFont="@string/poppin_semibold_fonts" />

                <com.legrooms.Views.TextViewPlus
                    android:id="@+id/tv_row_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="2.5"
                    android:capitalize="words"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="21sp"
                    app:customFont="@string/poppin_semibold_fonts" />
            </LinearLayout>

            <com.legrooms.Views.TextViewPlus
                android:id="@+id/tv_row_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#27 Year #5'3"
                android:textColor="#545456"
                android:textSize="13sp"
                app:customFont="@string/poppin_regular_fonts" />

            <com.legrooms.Views.TextViewPlus
                android:id="@+id/tv_row_user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="5dp"
                android:text="250"
                android:textColor="#545456"
                android:textSize="13sp"
                app:customFont="@string/poppin_regular_fonts" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1.0" />

                <com.legrooms.Views.TextViewPlus
                    android:id="@+id/tv_row_user_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:capitalize="words"
                    android:text="128 Reviews"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:customFont="@string/poppin_regular_fonts" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>